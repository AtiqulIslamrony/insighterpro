{
  "manifest_version": 3,
  "name": "Insighter Pro - Marketing & Analytics Debugger",
  "version": "1.0.0",
  "description": "Debug 200+ tracking pixels & analytics. GA4, Meta, TikTok, Adobe Analytics, GTM, Tealium, Hyros, CallRail & more. Real-time events, dataLayer inspector, consent mode checker.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "cookies",
    "clipboardWrite",
    "webNavigation",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["https://www.googletagmanager.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "logos/*", "team/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
